      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "components/*": [
        "src/components/*"
      ],
    },
    "esModuleInterop": true,
